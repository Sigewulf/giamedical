<script>
    /*
    * Show contact phone numbers during business hours.
    * Script placed here to avoid public file caching.
    */
    const callNow = document.querySelector('.navbar-nav .nav-link:first-child')
    const teamNumbers = document.querySelectorAll('#team .team-number')

    const now = new Date().getUTCHours()
    const day = new Date().getDay()

    /**
    *  check if value in now is between 8am and 4pm
    *  and if Not a Saturday or Sunday
    *  8am -> 8
    *  4pm -> 14
    */
    if ((now >= 8 && now <= 14) && (day !== 6 || day !== 7)) {
        callNow.style.display = 'none'
        teamNumbers.forEach(num => {
          num.style.display = 'none'
          num.classList.remove('d-inline-flex')
        })
    }
</script>
